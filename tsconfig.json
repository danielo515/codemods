{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017"],
        "preserveSymlinks": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "pretty": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "paths": {
            "@mods/*": ["src/mods/*"]
        }
    },
    "include": ["src/"],
    "exclude": ["node_modules", "dist", "__tests__", "**/*.test*", "**/*.spec*"]
}
